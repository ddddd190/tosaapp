const moods = [
  { emoji: "ðŸ˜Š", label: "ã‚ã‚Šã¨å…ƒæ°—" },
  { emoji: "ðŸ˜", label: "æ™®é€š" },
  { emoji: "ðŸ˜©", label: "ã¡ã‚‡ã£ã¨ç–²ã‚Œã¦ã‚‹" },
  { emoji: "ðŸ˜´", label: "çœ ã„" },
  { emoji: "ðŸ˜¶â€ðŸŒ«ï¸", label: "ã¼ã‚“ã‚„ã‚Š" }
];

function getMoodByTime() {
  const hour = new Date().getHours();

  if (hour >= 6 && hour < 9) return moods[3];      // æœçœ ã„
  if (hour >= 9 && hour < 12) return moods[0];     // åˆå‰å…ƒæ°—
  if (hour >= 12 && hour < 15) return moods[1];    // æ˜¼æ™®é€š
  if (hour >= 15 && hour < 18) return moods[2];    // å¤•æ–¹ç–²ã‚Œ
  if (hour >= 18 && hour < 22) return moods[1];    // å¤œæ™®é€š
  return moods[3];                                 // æ·±å¤œçœ ã„
}

